/* pages/text_detail/index.wxss */
page {
  background-color: #f0f0f0;
  padding-bottom: 120rpx;
}
.title {
  font-size: 50rpx;
  font-weight: bold;
  padding: 20rpx;
  background-color: #fff;
}
image {
  width: 95%;
}
.first {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #bbb;
  padding: 20rpx;
  background-color: #fff;
}
.content {
  padding: 40rpx;
  padding-top: 80rpx;
  background-color: #fff;
}
.bottom {
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  display: flex;
  background-color: #fff;
  width: 100%;
}
.bottom .input_btn {
  display: flex;
  align-items: center;
  color: #bbb;
  border-radius: 30rpx;
  background-color: #ebebeb;
  padding: 10rpx 20rpx;
  flex: 3;
}
.bottom .input_btn .icon-bianjishuru-xianxing {
  margin: 0 10rpx;
}
.bottom .good {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.bottom .good .icon-dianzan1 {
  margin-right: 10rpx;
}
.bottom .collect {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.bottom .collect .icon-star-full {
  color: orangered;
}
.bottom .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  position: relative;
}
.bottom .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}
/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
}
.drawer_content {
  padding: 20rpx;
  height: 800rpx;
  overflow-y: scroll;
  padding-bottom: 80rpx;
}
.norm_title {
  font-size: 40rpx;
  font-weight: 600;
}
.good_num {
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
  margin-top: 60rpx;
  padding: 30rpx 0;
}
.sumbit {
  background-color: var(--themeColor);
  color: #fff;
  padding: 20rpx;
  width: 80%;
  margin: 20rpx;
  border-radius: 30rpx;
  text-align: center;
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-52%);
}
.goods_evaluation {
  background-color: #fff;
  margin-top: 20rpx;
}
.goods_evaluation .common_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.goods_evaluation .common_title .common_text {
  font-size: 32rpx;
  font-weight: 400;
}
.goods_evaluation .common_title .look_all {
  color: #c8c8c8;
  font-size: 28rpx;
}
.goods_evaluation .common_body .common_top {
  display: flex;
  align-items: center;
}
.goods_evaluation .common_body .common_top image {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}
.goods_evaluation .common_body .common_top .user .common_time {
  color: #ccc;
}
.goods_evaluation .common_body .common {
  margin: 10rpx;
}
.goods_evaluation .common_body .reply {
  background-color: #f0f0f0;
  width: 80%;
  padding-bottom: 10rpx;
}
.goods_evaluation .common_body .recommon_top {
  display: flex;
  align-items: center;
}
.goods_evaluation .common_body .recommon_top image {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
}
.goods_evaluation .common_body .recommon_top .reuser {
  font-size: 20rpx;
}
