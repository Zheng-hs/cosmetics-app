page {
  padding-bottom: 90rpx;
}
.revice_address_row .address_btn {
  padding: 20rpx;
}
.revice_address_row .address_btn button {
  width: 60%;
}
.revice_address_row .user_info_row {
  display: flex;
  padding: 20rpx;
}
.revice_address_row .user_info_row .user_info {
  flex: 5;
}
.revice_address_row .user_info_row .user_phone {
  flex: 3;
  text-align: right;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 30rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_title .control {
  background-color: var(--themeColor);
  color: #fff;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .cart_chk_warp {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_warp image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_warp {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  font-size: 28rpx;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_value {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #b4b4b4;
  margin: 20rpx;
  margin-left: 0;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_norm {
  font-size: 24rpx;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp .price {
  display: flex;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp .goods_price {
  color: var(--themeColor);
  font-size: 30rpx;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp .goods_oldprice {
  text-decoration: line-through;
  color: #c8c8c8;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp .cart_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
}
.cart_content .cart_main .cart_item .cart_info_warp .goods_price_warp .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.footer_tool .all_chk_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total_price_warp {
  flex: 4;
  padding-right: 15rpx;
  text-align: right;
}
.footer_tool .total_price_warp .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.footer_tool .order_pay_warp {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tools {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
  justify-content: space-between;
}
.footer_tools .all_chk_warps {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
.order_delete {
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 35%;
}
/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--themeColor);
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
