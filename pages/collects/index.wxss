.collect_main {
  background-color: #f3f4f6;
}
.collect_main .collect_title {
  padding: 40rpx 0;
}
.collect_main .collect_title .collect_tips {
  padding: 15rpx;
  border: 1rpx solid #ccc;
  margin-left: 25rpx;
  background-color: #fff;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
.collect_main .collect_content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.collect_main .collect_content .first_tab {
  background-color: #fff;
  padding: 10rpx;
  margin: 10rpx;
  width: 47.5%;
}
.collect_main .collect_content .first_tab image {
  width: 100%;
  height: 300rpx;
}
.collect_main .collect_content .first_tab .title {
  padding: 10rpx;
  font-size: 30rpx;
}
.collect_main .collect_content .first_tab .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  margin: 10rpx;
}
.collect_main .collect_content .first_tab .info .view_num {
  color: #bbb;
}
