page {
  padding-bottom: 90rpx;
  background-color: #f0f0f0;
}
.detail_swiper {
  background-color: #fff;
}
.detail_swiper swiper {
  height: 100vw;
  text-align: center;
}
.detail_swiper swiper image {
  width: 100%;
}
.goods_price {
  padding: 15rpx;
  font-size: 52rpx;
  font-weight: 600;
  color: var(--themeColor);
  background-color: #fff;
  margin-top: 20rpx;
}
.goods_price .goods_oldprice {
  text-decoration: line-through;
  color: #c8c8c8;
  font-size: 30rpx;
}
.coupn {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.coupn .coupn_list {
  display: flex;
  flex-wrap: wrap;
}
.coupn .coupn_list .coupn_content {
  background-color: #ffd9dd;
  color: var(--themeColor);
  border-radius: 30rpx;
  padding: 0 20rpx;
  margin: 10rpx;
}
.coupn .getcoupn {
  color: var(--themeColor);
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
}
.goods_name_row {
  display: flex;
  background-color: #fff;
  padding: 10rpx 0;
}
.goods_name_row .goods_name {
  flex: 5;
  color: #000;
  font-size: 32rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}
.goods_name_row .goods_collect .icon-shoucang1 {
  color: orangered;
}
.goods_info .goods_info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.btn_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.btn_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btn_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn_tool .tool_item .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btn_tool .tool_item .goods_collect .icon-star-full {
  color: orangered;
}
.btn_tool .btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #fff;
  font-size: 15px;
  font-weight: 600;
}
.btn_tool .btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 15px;
  font-weight: 600;
}
.goods_evaluation {
  background-color: #fff;
  margin-top: 20rpx;
}
.goods_evaluation .common_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.goods_evaluation .common_title .common_text {
  font-size: 32rpx;
  font-weight: 400;
}
.goods_evaluation .common_title .look_all {
  color: #c8c8c8;
  font-size: 28rpx;
}
.goods_evaluation .common_body {
  padding: 20rpx 10rpx;
}
.goods_evaluation .common_body .common_top {
  display: flex;
  align-items: center;
}
.goods_evaluation .common_body .common_top image {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}
.goods_evaluation .common_body .common_top .user .common_time {
  color: #ccc;
}
.goods_evaluation .common_body .common {
  margin: 10rpx;
}
.goods_like {
  background-color: #fff;
  margin-top: 20rpx;
}
.hot_title {
  font-size: 32rpx;
  font-weight: bolder;
  margin: 10rpx 20rpx;
}
.hot_goods {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.hot_goods navigator {
  padding: 20rpx;
  width: 240rpx;
  text-align: center;
}
.hot_goods navigator image {
  width: 100%;
}
.hot_goods navigator view {
  text-align: center;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.hot_goods navigator .goods_prices {
  color: red;
  font-weight: 400;
}
/*button*/
.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #0C1939;
  color: #fff;
}
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}
/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
}
.drawer_content {
  padding: 20rpx;
  height: 800rpx;
  overflow-y: scroll;
  padding-bottom: 80rpx;
}
.drawer_coupon {
  background-color: #ffd9dd;
  color: var(--themeColor);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 20rpx;
  padding: 20rpx;
}
.drawer_coupon .coupon_num {
  font-size: 40rpx;
  font-weight: 400;
}
.drawer_coupon .coupon_center .start_time {
  font-size: 20rpx;
}
.drawer_coupon .coupon_center .end_time {
  font-size: 20rpx;
}
.drawer_coupon .lingqu {
  background-color: var(--themeColor);
  color: #fff;
  padding: 10rpx;
  border-radius: 15rpx;
}
.drawer_coupon .yilingqu {
  background-color: #deaaa5;
  color: #fff;
  padding: 10rpx;
  border-radius: 15rpx;
}
.norm_pic {
  display: flex;
}
.norm_pic image {
  width: 200rpx;
}
.sumbit {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: var(--themeColor);
  color: #fff;
  font-weight: bold;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.good_price {
  margin-left: 30rpx;
}
.good_price .now_price {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--themeColor);
  background-color: #fff;
  margin-top: 30rpx;
}
.good_price .old {
  text-decoration: line-through;
  color: #c8c8c8;
  font-size: 30rpx;
}
.good_price .goodsName {
  font-size: 30rpx;
  font-weight: 400;
  border-bottom: 1rpx solid #eee;
  color: #000;
  margin-top: 30rpx;
}
.norms {
  border-bottom: 1rpx solid #eee;
  margin: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.norm_title {
  font-size: 32rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
}
.norm_name {
  border: 1rpx solid #929191;
  font: 20rpx "microsoft yahei";
  text-align: center;
  padding: 15rpx;
  margin: 10rpx;
}
.active {
  font: 20rpx "microsoft yahei";
  text-align: center;
  padding: 15rpx;
  color: #fff;
  border: 0;
  background-color: var(--themeColor);
  margin: 10rpx;
}
.drawer_title {
  padding: 20rpx;
  font: 42rpx "microsoft yahei";
  text-align: center;
  border-bottom: 1px solid #eee;
}
.line {
  border-bottom: 1px solid #f8f8f8;
}
.buy_num {
  display: flex;
  align-items: center;
}
.buy_num .stock {
  color: #ccc;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.good_num {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.cart_num_tool {
  display: flex;
}
.cart_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
}
.cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
